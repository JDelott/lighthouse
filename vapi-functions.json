[
  {
    "name": "gather_appointment_info",
    "description": "Collect comprehensive appointment request information for therapist review",
    "parameters": {
      "type": "object",
      "properties": {
        "appointmentType": {
          "type": "string",
          "enum": ["initial_consultation", "follow_up", "couples_therapy", "family_therapy", "psychiatric_eval", "urgent_consultation"],
          "description": "Type of appointment being requested"
        },
        "urgency": {
          "type": "number",
          "minimum": 1,
          "maximum": 5,
          "description": "Urgency level (1=routine, 5=urgent but not crisis)"
        },
        "preferredDates": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Client's preferred appointment dates"
        },
        "preferredTimes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Client's preferred appointment times"
        },
        "duration": {
          "type": "number",
          "enum": [45, 60, 90],
          "description": "Preferred appointment duration in minutes"
        },
        "reasonForSeeking": {
          "type": "string",
          "description": "Brief description of why they're seeking therapy"
        },
        "previousTherapy": {
          "type": "boolean",
          "description": "Whether they've been in therapy before"
        },
        "specialRequests": {
          "type": "string",
          "description": "Any special scheduling needs or requirements"
        }
      },
      "required": ["appointmentType", "urgency", "reasonForSeeking"]
    }
  },
  {
    "name": "collect_intake_info",
    "description": "Store preliminary client intake information",
    "parameters": {
      "type": "object",
      "properties": {
        "clientInfo": {
          "type": "object",
          "properties": {
            "fullName": { "type": "string" },
            "dateOfBirth": { "type": "string" },
            "phone": { "type": "string" },
            "email": { "type": "string" },
            "address": { "type": "string" }
          },
          "required": ["fullName", "phone"]
        },
        "insuranceInfo": {
          "type": "object",
          "properties": {
            "provider": { "type": "string" },
            "memberId": { "type": "string" },
            "groupNumber": { "type": "string" }
          }
        },
        "reasonForSeeking": {
          "type": "string",
          "description": "Brief description of why they're seeking therapy"
        },
        "previousTherapy": {
          "type": "boolean",
          "description": "Whether they've been in therapy before"
        },
        "currentMedications": {
          "type": "string",
          "description": "Current medications or treatments"
        }
      },
      "required": ["clientInfo", "reasonForSeeking"]
    }
  },
  {
    "name": "create_follow_up_task",
    "description": "Create a follow-up task for the therapist with gathered information",
    "parameters": {
      "type": "object",
      "properties": {
        "priority": {
          "type": "string",
          "enum": ["routine", "urgent", "same_day"],
          "description": "Follow-up priority level"
        },
        "clientSummary": {
          "type": "string",
          "description": "Brief summary of client needs and information gathered"
        },
        "recommendedAction": {
          "type": "string",
          "enum": ["schedule_consultation", "provide_resources", "refer_specialist", "immediate_callback"],
          "description": "Recommended next action for therapist"
        },
        "keyNotes": {
          "type": "string",
          "description": "Important notes or concerns for therapist attention"
        },
        "contactPreference": {
          "type": "string",
          "enum": ["phone", "email", "text"],
          "description": "Client's preferred contact method for follow-up"
        }
      },
      "required": ["priority", "clientSummary", "recommendedAction"]
    }
  }
]
